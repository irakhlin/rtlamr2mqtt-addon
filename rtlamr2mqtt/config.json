{
  "name": "rtlamr2mqtt",
  "version": "ha-addon",
  "slug": "rtlamr2mqtt",
  "panel_icon": "mdi:gauge",
  "description": "RTLAMR to MQTT Bridge",
  "startup": "application",
  "boot": "auto",
  "map": ["config:rw"],
  "url": "https://github.com/irakhlin/rtlamr2mqtt-addon",
  "uart": true,
  "udev": true,
  "usb": true,
  "host_network": false,
  "arch": ["aarch64", "amd64", "armv7", "i386", "aarch64"],
  "services": ["mqtt:need"],
  "options": {
    "generals": [
      {
        "sleep_for": 300,
        "mode": "normal",
        "debug": false
      }
    ],
    "mqtts": [
      {
        "host": "hassio.local",
        "port": 1883,
        "user": "user",
        "password": "password",
        "ha_autodiscovery": true,
        "ha_autodiscovery_topic": "homeassistant"
      }
    ],
    "rtls": [
      {
        "rtltcp": "-s 2048000",
        "rtlamr": "-unique=true"
      }
    ],
    "meters": [
      {
        "id": 123456789,
        "protocol": "scm+",
        "name": "gas_meter",
        "format": "####.###",
        "unit_of_measurement": "mÂ³",
        "icon": "mdi:gas_canister"
      }
    ]
  },
  "schema": {
    "generals": [
      {
        "sleep_for": "int",
        "mode": "str",
        "debug": "bool"
      }
    ],
    "mqtts": [
      {
        "host": "str",
        "port": "int",
        "user": "str",
        "password": "str",
        "ha_autodiscovery": "bool",
        "ha_autodiscovery_topic": "str"
      }
    ],
    "rtls": [
      {
        "rtltcp": "str",
        "rtlamr": "str"
      }
    ],
    "meters": [
      {
        "id": "int",
        "protocol": "str",
        "name": "str",
        "format": "str",
        "unit_of_measurement": "str",
        "icon": "str"
      }
    ]
  }
}
